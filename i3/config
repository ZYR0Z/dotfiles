include $HOME/.config/i3/customizations.conf
include $HOME/.config/i3/layout.conf
include $HOME/.config/i3/applications.conf

font pango: Noto Sans Regular 12

# set the mod key to the winkey:
set $mod Mod4

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace
bindsym $mod+Shift+r restart

# compositor picom
exec_always --no-startup-id picom -b

# set powersavings for display:
exec --no-startup-id xset s 480 dpms 600 600 600

# default names for workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
